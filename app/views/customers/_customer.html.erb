<div id="<%= dom_id customer %>">
  <p>
    <strong>Full name:</strong>
    <%= customer.full_name %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= customer.phone %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= customer.email %>
  </p>

</div>

<h2>Orders:</h2>


  <ul>
    <% @orders.each do |order| %>
      <li>
        Order ID: <%= order.id %>, 
        Product name: <%= order.product_name %>,
        Product count: <%= order.product_count %>
      </li>
    <% end %>
  </ul>
